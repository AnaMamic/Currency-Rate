<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tečajna lista</title>
    
    @Scripts.Render("~/bundles/angular")
 
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body ng-app="CustomAngularApp">
    <div ng-controller="Currencies">
        <div class="col-sm-8 col-sm-offset-2" ng-show="show">
            <form class="form-horizontal" name="formCurrencyRate">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-10 col-sm-offset-1">
                            <label class="control-label col-sm-3">Odaberite valutu </label>
                            <select class="form-control col-sm-5" ng-model="Currency" ng-options="currency.Code for currency in currencies"></select>
                            <button class="btn btn-default btn-group-xs" style="margin-left:10px;" ng-click="getRate()">Ok</button>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-10 col-sm-offset-1">
                         <div class="col-sm-6 col-sm-offset-3">
                            <span class="label label-info" style="font-size:20px;">{{rate}}</span>
                         </div>
                    </div>
               </div> 
</form>
        </div>
    </div>


    <!--/row-offcanvas -->
    @Scripts.Render("~/bundles/vendors")
    @Scripts.Render("~/bundles/spa")
</body>
</html>